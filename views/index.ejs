<!--/.Log In -->
<div class="modal fade bs-modal-sm log-sign" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <div id="myTabContent" class="tab-content">

                    <div class="active tab-pane in" id="">
                        <form class="form-horizontal" id="loginForm" name="loginForm" action="/login" method="post">
                            <fieldset>
                                <!-- Sign In Form -->

                                <!-- Text input-->
                                <div class="group">
                                    <input id="username" name="username" required="" class="input" type="text"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="username">Username</label></div>

                                <!-- Password input-->
                                <div class="group">
                                    <input id="password" name="password" required="" class="input" type="password"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="password">Password</label>
                                </div>
                                <em>minimum 6 characters</em>

                                <div class="forgot-link">
                                    <a href="#forgot" data-toggle="modal" data-target="#forgot-password"> I forgot my
                                        password</a>
                                </div>

                                <!-- Button -->
                                <div class="control-group">
                                    <label class="control-label" for="confirmsignin"></label>
                                    <div class="controls">
                                        <button type="submit" onclick="login()" id="confirmsignin" name="confirmsignin"
                                                class="btn btn-primary btn-block">Log In
                                        </button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

